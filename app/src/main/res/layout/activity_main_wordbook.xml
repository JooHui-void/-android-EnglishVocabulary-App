<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/wordbook_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wordbook_icon_zip_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_zip"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/wordbook_icon_expand_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_expand"
                android:visibility="invisible"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 단어장"/>

    </LinearLayout>

    <ListView
        android:id="@+id/wordbook_listview_today"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:visibility="gone"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#25000000"
        android:layout_marginBottom="12dp"/>

<!--////////////////////////////////////////////////-->

    <LinearLayout
        android:id="@+id/wordbook_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wordbook_icon_zip_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_zip"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/wordbook_icon_expand_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_expand"
                android:visibility="invisible"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="완료한 단어장"/>

    </LinearLayout>

    <ListView
        android:id="@+id/wordbook_listview_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:visibility="gone"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#25000000"
        android:layout_marginBottom="12dp"/>

    <!--////////////////////////////////////////////////-->

    <LinearLayout
        android:id="@+id/wordbook_remain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wordbook_icon_zip_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_zip"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/wordbook_icon_expand_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_expand"
                android:visibility="invisible"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="남은 단어장"/>

    </LinearLayout>


    <ListView
        android:id="@+id/wordbook_listview_remain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:visibility="gone"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#25000000"
        android:layout_marginBottom="12dp"/>

</LinearLayout>